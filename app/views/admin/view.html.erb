<h2>Administrator's View</h2>

<p>Number of Fish Bowlers: <b><%= User.count %></b></p>

<table class="table table-striped table-bordered">
  <tr>
    <th>Admin</th>
    <th>User Name</th>
    <th>Email</th>
    <th>bowls_count</th>
    <th>sign_in_count</th>
    <th>last_sign_in_at</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.admin %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.bowls.count %></td>
      <td><%= user.sign_in_count %></td>
      <td><%= user.last_sign_in_at.strftime('%b. %d, %Y @ %I:%M%p') %></td>
    </tr>
  <% end %>
</table>

<%= paginate @users %>