<table class="table table-striped table-bordered">
  <tr>
    <th>Date Taken</th>
    <th>Nitrate</th>
    <th>Nitrite</th>
    <th>Hardness</th>
    <th>Alkalinity</th>
    <th>pH</th>
    <th></th>
  </tr>
  <%= render 'fields', f: f %>
  <% @test_results.each do |test_result| %>
    <tr>
      <td><%= test_result.created_at.strftime("%b. %d, %Y @ %I:%M%p") %></td>
      <td><%= test_result.nitrate %></td>
      <td><%= test_result.nitrite %></td>
      <td><%= test_result.hardness %></td>
      <td><%= test_result.alkalinity %></td>
      <td><%= test_result.ph %></td>
      <td style="text-align: center;">
        <%= link_to [@bowl, test_result],
                    confirm: 'Are you sure? This will permanently delete your test results!',
                    method: :delete do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
