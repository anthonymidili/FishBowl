- provide(:title, 'Sign in')
.hero-unit.center-devise-forms
  %h2.heading Sign in
  %br/
  = form_for(resource,                          |
    :as => resource_name,                       |
    :url => session_path(resource_name)) do |f| |
    .control-group
      = f.label :email
      = f.text_field :email, class: 'input-block-level', :autofocus => true
    .control-group
      = f.label :password
      = f.password_field :password, class: 'input-block-level'
    .control-group.checkbox.inline
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me
    %br/
    %br/
    .control-group
      = f.submit 'Sign in', class: 'btn btn-large btn-block btn-primary'
  = render 'devise/shared/links'
