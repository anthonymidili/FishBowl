- provide(:title, 'Change password')
.hero-unit.center-devise-forms
  %h2.heading Change your password
  %br/
  = form_for(resource,                    |
    :as => resource_name,                 |
    :url => password_path(resource_name), |
    :html => { :method => :put }) do |f|  |
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .control-group
      = f.label :password, "New password"
      = f.password_field :password, class: 'input-block-level', :autofocus => true
    .control-group
      = f.label :password_confirmation, "Confirm new password"
      = f.password_field :password_confirmation, class: 'input-block-level'
    .control-group
      = f.submit 'Change my password', class: 'btn btn-large btn-block btn-primary'
  = render 'devise/shared/links'
