- provide(:title, 'Forget something')
.row
  .medium-6.medium-centered.columns
    .callout
      %h2.heading Forgot your password?
      %br/
      = form_for(resource, :as => resource_name, :url => password_path(resource_name),
      :html => { :method => :post }) do |f|
        = devise_error_messages!
        .control-group
          = f.label :email
          = f.text_field :email, class: 'input-block-level', :autofocus => true
        .control-group
          = f.submit 'Send me reset password instructions', class: 'button'
      = render 'devise/shared/links'
