<h2><%= "#{@bowl.name} Fish Bowl #{@bowl.water_type} Event #{('Note').pluralize(@notes.count)}" %></h2>

<p>
  <%= link_to "To #{@bowl.name} Bowl", bowl_path(@bowl), class: 'btn btn-info btn-small pad-right' %>
  <%= link_to "Back to #{@bowl.water_type} Health", bowl_test_results_path(@bowl), class: 'btn btn-info btn-small' %>
</p>

