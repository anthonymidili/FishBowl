<h2><%= "#{current_user.name}," %></h2>
<h3><%= "Select Your #{@bowl.water_type} Species In #{@bowl.name} Fish Bowl" %></h3>

<p>
  <%= link_to "Bowl Directory", bowls_path %> |
  <%= link_to "#{@bowl.name} Fish Bowl", @bowl %>
</p>

<%= form_for @bowl do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag "bowl[species_ids][]", nil%>
  <ul class="thumbnails">
    <% Species.by_bowl_water_type(f.object.water_type).each do |species| %>
      <li class="span4">
        <div class="thumbnail">
          <%= image_tag(species.image) %>
          <label class="checkbox">
            <%= check_box_tag "bowl[species_ids][]", species.id, @bowl.species_ids.include?(species.id) %>
            <b><em><%= species.name %></em></b>
          </label>
          <section>
            <b>Water type:</b> <%= species.water_type %><br>
            <% species.info.each do |name,value| %>
              <b><%= name.to_s.humanize %>:</b>
              <%= value %><br>
            <% end %>
          </section>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="control-group"><%= f.submit class: "btn btn-primary" %></div>
<% end %>

<p>More Species To Select From Coming Soon.</p>
