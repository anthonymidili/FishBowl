<h2 xmlns="http://www.w3.org/1999/html"><%= "#{current_user.name}, Select The Species In #{@bowl.name} Fish Bowl" %></h2>

<p>
  <%= link_to "Bowl Directory", bowls_path %> |
  <%= link_to "#{@bowl.name} Fish Bowl", @bowl %>
</p>

<%= form_for @bowl do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag "bowl[species_ids][]", nil%>
  <ul class="thumbnails">
    <% Species.all.each do |species| %>
      <li class="span4">
        <div class="thumbnail">
          <%= image_tag(species.image) %>
          <label class="checkbox">
            <%= check_box_tag "bowl[species_ids][]", species.id, @bowl.species_ids.include?(species.id) %>
            <b><em><%= species.name %></em></b>
          </label>
          <section>
            <%= Kramdown::Document.new(species.info).to_html.html_safe %>
          </section>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="control-group"><%= f.submit class: "btn btn-primary" %></div>
<% end %>
