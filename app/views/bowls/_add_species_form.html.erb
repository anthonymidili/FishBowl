<%= form_for @bowl do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag "bowl[species_ids][]", nil%>
  <ul class="thumbnails">
    <% Species.by_custom_species(current_user.id).by_bowl_water_type(f.object.water_type).each do |species| %>
      <li class="span4">
        <div class="thumbnail">
          <div class="add-thumbnail-height">
            <div class="center">
              <label for="clickable"><%= image_tag(default_or_species_avatar(species)) %></label>
            </div>
            <label for="clickable" class="checkbox">
              <%= check_box_tag "bowl[species_ids][]",
                                species.id, @bowl.species_ids.include?(species.id),
                                name: 'clickable', id: 'clickable' %>
              <h4><em><%= species.name %></em></h4>
            </label>
          </div>
          <%= render species %>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="fixed-button"><%= f.submit "Update Selection", class: "btn btn-primary" %></div>
<% end %>
