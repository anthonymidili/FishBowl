<h2><%= "#{current_user.name}'s Fish #{one_or_more_bowls(@bowls)}" %></h2>

<div class="row">
  <div class="span12">
    <% @bowls.each do |bowl| %>
      <section>
        <div class="row">

          <div class="span3">
            <h3><%= link_to bowl.name, bowl %></h3>
            <p><%= link_to image_tag("cool_fish_bowl.jpg", alt: bowl.name), bowl %></p><br>
            <p><%= link_to "Edit Fish Bowl Name", edit_bowl_path(bowl) %></p><br>
            <p>
              <%= link_to bowl,
                          confirm: 'Are you sure? This will permanently delete your fish bowl!',
                          method: :delete do %>
                <i class="icon-remove"></i>Delete Bowl
              <% end %>
            </p>
          </div>

          <div class="span9">
            <h3><%= link_to "Water Health", bowl_water_health_tests_path(bowl) %></h3>
            <p>where graph would be if i could write coffee script!</p>
            <%= content_tag :div, "", id: "results_chart", data: {results: bowl.water_health_tests} %>
          </div>

        </div>
      </section>
    <% end %>
  </div>
</div>

<p><%= link_to "Create New Bowl", new_bowl_path, class: "btn btn-primary" %></p>
