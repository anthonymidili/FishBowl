<section>
  <div class="row center">
    <div class="span12">
      <h3>Your Species</h3>
      <%= link_to 'Select Your Species', add_species_bowl_path(@bowl) %>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <ul class="thumbnails">
        <% @species.each do |species| %>
          <li class="span4">
            <div class="thumbnail">
              <%= image_tag(species.image) %>
              <b><em><%= species.name %></em></b>
              <section>
                <%= Kramdown::Document.new(species.info).to_html.html_safe %>
              </section>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
