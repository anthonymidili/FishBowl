<section>
  <div class="row center">
    <div class="span12">
      <h3>Your Species</h3>
      <%= link_to 'Find Your Species', add_species_bowl_path(@bowl) %>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <ul class="thumbnails">
        <% @species.each do |species| %>
          <li class="span4">
            <div class="thumbnail">
              <%= image_tag(species.image) %>
              <h4><em><%= species.name %></em></h4>
              <section>
                <b>Water type:</b> <%= species.water_type %><br>
                <% species.info.each do |name,value| %>
                  <b><%= name.to_s.humanize %>:</b>
                  <%= value %><br>
                <% end %>
              </section>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
