<%= form_for @bowl, url: { action: "update_info" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="control-group">
    <%= f.label :size, "Fish Bowl Size" %>
    <div class="input-append">
      <%= f.text_field :size, autofocus: true %>
      <span class="add-on">Gallons</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :temperature, "Temperature" %>
    <div class="input-append">
      <%= f.text_field :temperature %>
      <span class="add-on">&deg;F</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :water_type, "Fish Bowl Type" %>
    <%= f.select :water_type,
                 'Fresh Water'    => 'Fresh Water',
                 'Salt Water'     => 'Salt Water' %>
  </div>
  <div class="control-group">
    <%= f.label :fish_type, "Fish Type" %>
    <%= f.select :fish_type,
                 'Non Aggressive'  => 'Non Aggressive',
                 'Semi Aggressive' => 'Semi Aggressive',
                 'Aggressive'      => 'Aggressive' %>
  </div>
  <div class="control-group"><%= f.submit "Update Info", class: "btn btn-primary" %></div>
<% end %>