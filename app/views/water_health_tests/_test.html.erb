<table class="table table-striped table-bordered">
  <tr>
    <th>Date Taken</th>
    <th>Nitrate</th>
    <th>Nitrite</th>
    <th>Hardness</th>
    <th>Alkalinity</th>
    <th>pH</th>
    <th></th>
  </tr>
  <%= render 'fields', f: f %>
  <% @water_health_tests.each do |water_health_test| %>
    <tr>
      <td><%= water_health_test.created_at.strftime("%b. %d, %Y @ %I:%M%p") %></td>
      <%= nitrate_nitrite_level(water_health_test.nitrate, 41, 79, 80, 200, 201) %>
      <%= nitrate_nitrite_level(water_health_test.nitrite, 0.5, 0.9, 1, 3, 3.1) %>
      <td><%= water_health_test.hardness %></td>
      <%= alkalinity_level(water_health_test.alkalinity, 120, 180, 180, 300) %>
      <td><%= water_health_test.ph %></td>
      <td class="center">
        <%= link_to [@bowl, water_health_test],
                    confirm: 'Are you sure? This will permanently delete your water health test!',
                    method: :delete do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
