<tr class="center_fields">
  <td>
    <div>Ideal</div>
    <div class="caution">Caution</div>
    <div class="unsafe">Unsafe</div>
    <div class="danger">Danger</div>
  </td>
  <td><%= f.text_field :ammonia, autofocus: true %></td>
  <td><%= f.text_field :nitrate %></td>
  <td><%= f.text_field :nitrite %></td>
  <% if @bowl.water_type == "Freshwater" %>
    <td><%= f.text_field :hardness  %></td>
  <% end %>
  <td><%= f.text_field :alkalinity %></td>
  <td><%= f.text_field :ph %></td>
  <td><%= f.submit "Save Test Results", class: "btn btn-small btn-primary" %></td>
</tr>
